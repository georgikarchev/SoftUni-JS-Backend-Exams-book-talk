<!-- In case of error, you should display div with class "errorContainer" -->
<!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
{{#if error}}
<div class="error-box">
    <p>{{error}}</p>
</div>
{{/if}}

<section class="register-form-container">
  <form method="POST">
    <h3>Register</h3>
    <label>Email</label>
    <input type="email" name="email" class="box" id="" />
    <label>Username</label>
    <input type="text" name="username" class="box" id="" />
    <label>Password</label>
    <input type="password" name="password" class="box" id="" />
    <label>Confirm Password</label>
    <input type="password" name="repassword" class="box" id="" />
    <input type="submit" value="Register" class="btn" />
    <p>Have an account ? <a href="/auth/login">Click here</a></p>
  </form>
</section>
